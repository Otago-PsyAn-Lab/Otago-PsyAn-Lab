<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dip"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="0dip"
    android:paddingLeft="16dip"
    android:useDefaultMargins="true" >

    <TextView
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dip"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="8dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:text="@string/title_source_file"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:paddingRight="8dip"
        android:text="@string/label_filename"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/filename"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="16dip"
        android:fontFamily="sans-serif-light"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:paddingRight="8dip"
        android:text="@string/label_filesize"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/filesize"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="16dip"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dip"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="8dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="8dip"
        android:text="@string/title_columns"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:paddingRight="8dip"
        android:text="@string/label_column_start"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/col_start"
        style="?android:attr/spinnerStyle"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="16dip"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="0dip"
        android:fontFamily="sans-serif-light"
        android:paddingRight="8dip"
        android:text="@string/label_column_names"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <FrameLayout
        android:id="@+id/add"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginBottom="0dip"
        android:background="@drawable/card_item_background_holo_light"
        android:padding="16dip" >

        <TextView
            android:id="@+id/text_add"
            style="@style/header_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/action_add_new" />
    </FrameLayout>

</GridLayout>