<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.ac.otago.psyanlab.single"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nz.ac.otago.psyanlab.single.LoadingActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nz.ac.otago.psyanlab.single.LobbyActivity" />
        <activity android:name="nz.ac.otago.psyanlab.common.PaleDetailActivity" />
        <activity android:name="nz.ac.otago.psyanlab.common.ImportPaleActivity" />
        <activity android:name="nz.ac.otago.psyanlab.common.runtime.ExperimentRuntimeActivity" />
        <activity android:name="nz.ac.otago.psyanlab.common.designer.ExperimentDesignerActivity" />
        <activity android:name="nz.ac.otago.psyanlab.common.designer.assets.ImportAssetActivity" />
        <activity
            android:name="nz.ac.otago.psyanlab.common.designer.program.stage.StageActivity"
            android:theme="@style/AppTheme.Overlay"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name="nz.ac.otago.psyanlab.single.DataProvider"
            android:authorities="nz.ac.otago.psyanlab.single.data"
            android:exported="false" />
    </application>

</manifest>